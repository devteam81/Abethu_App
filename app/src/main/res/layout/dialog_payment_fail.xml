<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_registeration">

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_payment_fail"
            android:src="@drawable/payment_bg"/>-->

        <LinearLayout
            android:id="@+id/ll_payment_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_25"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:background="@drawable/payment_fail">

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:src="@drawable/payment_fail"/>-->

                <LinearLayout
                    android:id="@+id/ll_fail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_20"
                    android:layout_margin="@dimen/dp_10"
                    android:gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/payment_failed_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:text="Payment Failed!"
                        android:textSize="@dimen/sp_24"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_20"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/payment_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:lineHeight="@dimen/dp_20"
                    android:textColor="@color/white"
                    android:text="Kindly raise a support ticket if your account has been changed."
                    android:textSize="@dimen/sp_14"
                    android:gravity="center"/>


                <Button
                    android:id="@+id/support_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_30"
                    android:background="@color/white"
                    android:text="@string/raise_support_ticket"
                    android:textSize="@dimen/sp_16"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:paddingStart="@dimen/dp_40"
                    android:paddingEnd="@dimen/dp_40"
                    android:background="@drawable/bg_button"
                    android:text="Close"
                    android:textSize="@dimen/sp_18"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>
            <!--<TextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:padding="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"/>-->

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>