<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparentblack"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_registeration">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textColor="@color/textHeadingColor"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_old_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:weightSum="3"
                android:background="@drawable/bg_edittext"
                android:paddingBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:paddingStart="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text="@string/old_password"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="@string/old_password"
                        android:inputType="textPassword"
                        android:maxLength="@integer/editText_pwd_max_length"
                        tools:text="@string/are_you_sure_to_delete_the_video_from_offline"
                        android:paddingEnd="@dimen/dp_55"
                        android:paddingStart="@dimen/dp_30"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_gray"
                        android:background="@null"
                        tools:ignore="RtlSymmetry"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_old_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_eye_hide"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:weightSum="3"
                android:background="@drawable/bg_edittext"
                android:paddingBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:paddingStart="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text="@string/new_password"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="@string/new_password"
                        android:inputType="textPassword"
                        android:maxLength="@integer/editText_pwd_max_length"
                        tools:text="@string/are_you_sure_to_delete_the_video_from_offline"
                        android:paddingEnd="@dimen/dp_55"
                        android:paddingStart="@dimen/dp_30"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_gray"
                        android:background="@null"
                        tools:ignore="RtlSymmetry"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_new_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_eye_hide"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:weightSum="3"
                android:background="@drawable/bg_edittext"
                android:paddingBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="top"
                    android:paddingStart="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text="@string/confirm_password"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:maxLength="@integer/editText_pwd_max_length"
                        tools:text="@string/are_you_sure_to_delete_the_video_from_offline"
                        android:paddingEnd="@dimen/dp_55"
                        android:paddingStart="@dimen/dp_30"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_gray"
                        android:background="@null"
                        tools:ignore="RtlSymmetry"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_re_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_eye_hide"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingStart="@dimen/dp_40"
                android:paddingEnd="@dimen/dp_40"
                android:background="@drawable/bg_button"
                android:layout_gravity="center"
                android:text="@string/update_password"
                android:textSize="@dimen/sp_20"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>