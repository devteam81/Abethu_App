<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".ui.activity.PassCodeScreenActivity">

    <ImageView
        android:id="@+id/app_header_icon"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="@dimen/dp_10"
        android:src="@drawable/app_logo"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ui.activity.PassCodeScreenActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_pattern"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="@dimen/dp_10"/>
        <TextView
            android:id="@+id/txt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/unlock_app"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/gray" />

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:height="55dp"
            app:width="40dp"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:box_margin_right="@dimen/dp_5"
            app:box_margin_left="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_16"
            app:length="6"
            app:otp_text_size="@dimen/sp_35"
            app:bar_active_color="@color/white"
            app:bar_inactive_color="@color/white"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_7"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_10"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="4"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="5"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_7"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_10"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="7"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="8"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_7"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_10"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <View
                    android:id="@+id/btn_back"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_back"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textSize="@dimen/sp_40"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_7"
                    tools:ignore="HardcodedText,RtlSymmetry"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clear"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_8"
                    />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:baselineAligned="false"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/btn_tick"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerInParent="true" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_tick"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_7"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_forgot_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_16"
            android:text="@string/forgot_pin"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_20"/>


    </LinearLayout>
</RelativeLayout>